@model BirthdayCardModel
@{
    ViewData["Title"] = "BirthdayCardForm";
}

<h3 style="font-family:'Times New Roman'">Send a Birthday Card</h3>

<form asp-action="SendBirthdayCard">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group col-6">
        <label asp-for="From" class="control-label"></label>
        <input asp-for="From" class="form-control" />
    </div>
    <div class="form-group col-6">
        <label asp-for="To" class="control-label"></label>
        <input asp-for="To" class="form-control" />
    </div>
    <div class="form-group col-6">
        <label asp-for="Message" class="control-label"></label>
        <textarea asp-for="Message" class="form-control"></textarea>
        @*<input asp-for="Message" class="form-control" />*@
    </div>
    <div class="form-group">
        <input type="submit" value="Send Card" class="btn btn-primary" />
    </div>
</form>

