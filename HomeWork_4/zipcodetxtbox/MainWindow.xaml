<Window x:Class="zipcodetxtbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:zipcodetxtbox"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock>US Zip/Canadian Post Code</TextBlock>
        <TextBox x:Name="uxUSZip" TextChanged="uxUSZip_Changed"/>
        <Button x:Name="uxSubmit" Content="Button"/>
    </StackPanel>
</Window>
